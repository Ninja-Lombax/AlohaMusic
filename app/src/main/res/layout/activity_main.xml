<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="net.androidbootcamp.alohamusic.MainActivity">

    <ImageView
        android:layout_width="320dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/ukulele"
        android:id="@+id/imgUkelele"
        android:contentDescription="@string/ukelele"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:text="@string/btnUkelele"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgUkelele"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/btnUkelele"
        android:textSize="22dp"
        android:layout_marginBottom="10dp" />

    <Button
        android:text="@string/btnDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/btnDrums"
        android:textSize="22sp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="320dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/drums"
        android:id="@+id/imgDrums"
        android:contentDescription="@string/drums"
        android:layout_above="@+id/btnDrums"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />
</RelativeLayout>
